<body>
    <div class="container">
        <h1>User Dashboard</h1>
        <div class="welcome-message">
            Welcome, <span th:text="${user.name}">User</span>! Here's your work overview.
        </div>

        <!-- Statistics -->
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Tasks</h3>
                <div class="stat-number" th:text="${#lists.size(tasks)}">0</div>
            </div>
            <div class="stat-card">
                <h3>Pending</h3>
                <div class="stat-number" th:text="${tasks.?[status=='PENDING'].size()}">0</div>
            </div>
            <div class="stat-card">
                <h3>In Progress</h3>
                <div class="stat-number" th:text="${tasks.?[status=='IN_PROGRESS'].size()}">0</div>
            </div>
            <div class="stat-card">
                <h3>Completed</h3>
                <div class="stat-number" th:text="${tasks.?[status=='COMPLETED'].size()}">0</div>
            </div>
        </div>

        <!-- Navigation Menu -->
        <div class="nav-menu">
            <a th:href="@{/user/tasks}" class="nav-btn">My Tasks</a>
            <a th:href="@{/user/comments}" class="nav-btn">View All Comments</a>
            <a th:href="@{/logout}" class="nav-btn">Logout</a>
        </div>

        <!-- Tasks Table -->
        <h2>Your Tasks</h2>
        <div th:if="${#lists.isEmpty(tasks)}" style="text-align:center; color:#666; font-style:italic;">
            No tasks assigned yet. Please check back later.
        </div>
        <table th:if="${!#lists.isEmpty(tasks)}">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>Due Date</th>
                <th>Actions</th>
            </tr>
            <tr th:each="task : ${tasks}">
                <td th:text="${task.title}">Title</td>
                <td th:text="${task.description}">Description</td>
                <td>
                    <span th:classappend="'status-badge ' + ${task.status=='COMPLETED'?'status-completed':task.status=='IN_PROGRESS'?'status-inprogress':task.status=='PENDING'?'status-pending':'status-delayed'}"
                          th:text="${task.status}">Status</span>
                </td>
                <td th:text="${task.startDate}">Start Date</td>
                <td th:text="${task.dueDate}">Due Date</td>
                <td>
                    <div class="action-container">
                        <select class="status-dropdown" th:onchange="|updateTaskStatus(${task.id}, this.value)|">
                            <option value="PENDING" th:selected="${task.status=='PENDING'}">Pending</option>
                            <option value="IN_PROGRESS" th:selected="${task.status=='IN_PROGRESS'}">In Progress</option>
                            <option value="COMPLETED" th:selected="${task.status=='COMPLETED'}">Completed</option>
                            <option value="DELAYED" th:selected="${task.status=='DELAYED'}">Delayed</option>
                        </select>
                        <a th:href="@{/user/tasks/comments(taskId=${task.id})}" class="action-btn btn-comments">Comments</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
