package com.company.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class LoginController {

    // Map root URL ("/") to index.html
    @GetMapping("/")
    public String home() {
        return "index"; // This will look for src/main/resources/templates/index.html (if using Thymeleaf)
                        // or src/main/resources/static/index.html (if using plain static page)
    }
    
    @GetMapping("/login")
    public String loginPage() {
        return "login";
    }

    @GetMapping("/register")
    public String registerPage() {
        return "register";
    }
}