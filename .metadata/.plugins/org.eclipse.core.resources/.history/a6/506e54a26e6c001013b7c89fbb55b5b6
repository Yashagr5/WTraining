	package com.wipro;
import java.util.Scanner;
	class Employee{
		int id;
		String name;
			String position;
			int salary;
			
			Employee(int id, String name, String position, int salary){
				this.id=id;
				this.name = name;
				this.position = position;
				this.salary = salary;
			}
			
			void display() {
				System.out.println("ID: "+id +" Name: "+name+ " Position: "+position + " Salary: " +salary);
			}
	}
	
	public class Assignment_class {
	
		public static void main(String[] args) {
				Scanner in = new Scanner(System.in);
				System.out.println("Enter Number of Employees: ");
				int number = in.nextInt();
				Employee[] emp = new Employee[number];
				
				for(int i=0; i<number; i++) {	
	System.out.println("Employee Management");
	System.out.println("Choice activity you want to do:");
	System.out.println("1.add");
	System.out.println("2.view");
	System.out.println("3.Search");
	System.out.println("4.Delete");
	System.out.println("5.Update");
	System.out.println("6.Exit");
	System.out.println("Make Your Choice: ");
	int choice = in.nextInt();
	
	 switch(choice){
	 case 1: {
		 System.out.print("Enter ID: ");
	     int id = in.nextInt();
	     System.out.print("Enter Name: ");
	     String name = in.next();
	     System.out.print("Enter Position: ");
	     String pos = in.next().trim().toLowerCase();
	     System.out.print("Enter Salary: ");
	     int salary = in.nextInt();
	     emp[i] = new Employee(id, name, pos, salary);
	     for(Employee e : emp)
		 {
			 e.display();
		}
		 break;
	 }
	 case 2: {
		 for(Employee e : emp)
		 {
			 e.display();
		}
	 }
	 
	 // Search
	 case 3: {
		 System.out.println("Enter Id: ");
		 int ids = in.nextInt();
		 if(emp[i].id == ids) {
			 System.out.println("Id Found: ");
			 emp[i].display();
		 }
		 else {
			 System.out.println("Id not Found");
		 }
		 break;
	 }

		//	 deleteEmployee();
			 
	 case 4: {
		 System.out.println("Enter Id: ");
		 int ids = in.nextInt();
		 if(emp[i].id == ids) {
			 System.out.println("Id Found: ");
			 emp[i]= null;
		 }
		 else {
			 System.out.println("Id not Found");
		 }
		 break;
	 }
		//	 updateEmployee();
	 case 5:{
		 break;
	 }
	 case 6:{
		 System.out.println("Exit");
		 break;
	 }
	 default: {
		 System.out.println("Invalid Input");
	 }
	}
				}
		System.exit(0);
		}
	}